@model IEnumerable<DanhMuc>
<div class="categories__slider owl-carousel">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
            <a asp-action="Index" asp-controller="Shop" asp-route-categoryId="@item.Id">
                <div class="categories__item">
                    <img src="data:image/png;base64,@item.imgDanhMuc" />
                    <h5>@item.Namedanhmuc</h5>
                </div>
            </a>
        </div>
    }
</div>
