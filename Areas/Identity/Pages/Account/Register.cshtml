@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<!-- Include your custom CSS file -->
<link rel="stylesheet" href="~/css/custom.css">

<div class="body d-flex justify-content-center align-items-center">
    <div class="containers">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@ViewData["Title"]</h3>
                <hr />
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="username" class="font-weight-bold">Tên đăng nhập</label>
                        <input asp-for="Input.Username" class="form-control" id="username" type="text" aria-describedby="usernameHelp" placeholder="Nhập tên đăng nhập của bạn" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="email" class="font-weight-bold">Email</label>
                        <input asp-for="Input.Email" class="form-control" id="email" type="email" aria-describedby="emailHelp" placeholder="Nhập địa chỉ email của bạn" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="font-weight-bold">Mật khẩu</label>
                        <input asp-for="Input.Password" class="form-control" id="password" type="password" aria-describedby="passwordHelp" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <small id="passwordHelp" class="form-text text-muted">Mật khẩu cần có ít nhất 8 ký tự.</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword" class="font-weight-bold">Xác nhận mật khẩu</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" id="confirmPassword" type="password" aria-describedby="confirmPasswordHelp" placeholder="Nhập lại mật khẩu" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-primary">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
